<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %></td>
        <td>フォロー数：</td>
        <td>フォロワー数：</td>
        <% if user.following?(current_user) %>
          <td><%= link_to 'フォロー外す', url: user_relationships_path(user), method: :delete %></td>
          <% else %>
          <td><%= link_to 'フォローする', url: user_relationships_path(user), method: :post %></td>
        <% end %>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
